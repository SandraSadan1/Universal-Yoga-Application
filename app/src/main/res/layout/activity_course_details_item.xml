<!-- activity_course_details_item.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDayItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewTimeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewDurationItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewPriceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewCapacityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewTypeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>
        <TextView
            android:id="@+id/textViewDescriptionItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006400"/>

        <!-- Edit and Delete Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
